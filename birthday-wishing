<body>
  <h1>💌🎀 A Surprise For You🎀 💌</h1>
  <button onclick="showMessage()">🎁 Open Gift 🎁</button>
  <h2 id="message" class="hidden">🎉 Happy Birthday baee!!🎂💙<br>Even though we are far apart🌷, I’m celebrating you today! 💕</h2>

  <script>
    function showMessage() {
      document.getElementById('message').classList.remove('hidden');
      confettiEffect();
    }

    function confettiEffect() {
      const duration = 3 * 1000;
      const end = Date.now() + duration;

      (function frame() {
        const colors = ['#bb0000', '#ffffff', '#00bb00', '#0000bb'];
        const particle = document.createElement('div');
        particle.style.position = 'fixed';
        particle.style.width = '10px';
        particle.style.height = '10px';
        particle.style.background = colors[Math.floor(Math.random() * colors.length)];
        particle.style.top = Math.random() * window.innerHeight + 'px';
        particle.style.left = Math.random() * window.innerWidth + 'px';
        particle.style.opacity = 0.7;
        particle.style.borderRadius = '50%';
        document.body.appendChild(particle);

        setTimeout(() => particle.remove(), 2000);

        if (Date.now() < end) {
          requestAnimationFrame(frame);
        }
      }());
    }
  </script>
</body>
