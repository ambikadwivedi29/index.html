    }
    h1 {
      font-size: 2.5em;
      color: white;
      animation: glow 2s infinite alternate;
    }
    @keyframes glow {
      from { text-shadow: 0 0 10px #fff, 0 0 20px #ff4da6; }
      to { text-shadow: 0 0 20px #ff4da6, 0 0 30px #ff0066; }
    }
